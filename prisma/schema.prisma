model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  reviews   Review[]
  bookLists UserBookList[]
}

model Book {
  id          Int           @id @default(autoincrement())
  title       String
  author      String
  publishedAt DateTime?
  reviews     Review[]
  users       UserBookList[]
}

model Review {
  id      Int     @id @default(autoincrement())
  rating  Int     @default(0)
  comment String?
  bookId  Int
  userId  Int
  book    Book    @relation(fields: [bookId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}

model UserBookList {
  id     Int  @id @default(autoincrement())
  bookId Int
  userId Int
  book   Book @relation(fields: [bookId], references: [id])
  user   User @relation(fields: [userId], references: [id])
}

